<%= form_for @location do |f| %>
    <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :location_img, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div> 
    <%= f.submit class: "btn btn-primary"%>
<% end %>