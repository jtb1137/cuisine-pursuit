<div class="card p-3">
    <%= image_tag restaurant.restaurant_img(:thumb), class: "card-img-top" %>
    <div class="card-body">
        <h5 class="card-title">
            <%= link_to restaurant.name, restaurant_path(restaurant) %>
        </h5>
        <p class="card-text">Description? </p>
        <p class="card-text">
            <%= restaurant.address %>
        </p>
        <p class="card-text">
            <% restaurant.categories.each do |category| %>
                <%= link_to category.name, category_path(category), class: "text-muted" %>
            <% end %>
        </p>
    </div>
</div>