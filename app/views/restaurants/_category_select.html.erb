<div class="form-group">
    <%= f.label :category_ids, "Select Categories", class: "form-check form-check-inline"%>
    <%= select_tag :category_ids, options_from_collection_for_select(Category.all, :id, :name), multiple: true, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label :categories, "Create New Category" %>
    <%= f.fields_for :categories, @restaurant.categories.build do |categories_fields| %>
        <%= categories_fields.text_field :name %>
    <% end %>
</div> 