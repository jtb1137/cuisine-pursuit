<%= form_for @restaurant do |f| %>
<div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :restaurant_img, class: "form-control" %>
    </div>    
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
    </div> 

    <div class="form-check">
        <%= f.collection_check_boxes :location_ids, Location.all, :id, :name %>
    </div>
    <div class="form-group">
        <%= f.fields_for :locations, @restaurant.locations.new do |locations_fields| %>
            <%= locations_fields.text_field :name %>
        <% end %>
    </div>
    <div class="form-check">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    </div>
    <div class="form-group">
        <%= f.fields_for :categories, @restaurant.categories.new do |categories_fields| %>
            <%= categories_fields.text_field :name %>
        <% end %>
    </div>    
    <%= f.submit class: "btn btn-primary"%>
<% end %>