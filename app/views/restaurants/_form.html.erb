<%= form_for @restaurant do |f| %>
<div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :restaurant_img, class: "form-control" %>
    </div>    
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
    </div> 

    <%= render 'location_select', f: f %>
    <%= render 'category_select', f: f %>

    <%= f.submit class: "btn btn-primary"%>
<% end %>