<%= form_for [@restaurant, @restaurant.reviews.build] do |f| %>
    <div class="form-group">
        <%= f.label :rating %>
            <%= f.text_field :rating, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary"%>
<% end %>