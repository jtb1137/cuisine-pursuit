<div class="container">
    <h1>Categories!</h1>
    <div class="card-deck">
        <% @categories.each do |category| %>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
                    <p class="card-text"> This should probably be information </p>
                </div>
            </div>
        <% end %>
    </div>
</div>